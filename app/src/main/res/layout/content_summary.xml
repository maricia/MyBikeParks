<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SummaryActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_centerInParent="true">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="489dp"
        android:stretchColumns="@string/cast_forward_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/SummaryView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="3dip"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dip"
                android:text="Summary of Last Walk"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="101dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/dateOfWalkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dip"
                android:text="Last Walk Date:"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="101dp" />

            <TextView
                android:id="@+id/dateWalkTextView"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|end"
                android:padding="3dip"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lastWalkTimeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dip"
                android:text="Last Walk Time:"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="101dp" />

            <TextView
                android:id="@+id/totalTimeTextView"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|end"
                android:padding="3dip"
                android:text="TextView" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/speedOfWalkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dip"
                android:text="Last Walk Speed:"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="101dp" />

            <TextView
                android:id="@+id/speedWalkTextView"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|end"
                android:padding="3dip"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/distanceOfWalkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dip"
                android:text="Last Walk Distance:"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="101dp" />

            <TextView
                android:id="@+id/distanceWalkTextView"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|end"
                android:padding="3dip"
                android:text="TextView"
                />

        </TableRow>
        <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/settingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="3dip"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dip"
                android:text="Summary of Settings"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="101dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/lineWeightTextTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dip"
                android:text="Line Weight:"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="101dp" />

            <TextView
                android:id="@+id/lineWeightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|end"
                android:padding="3dip"
                android:text="TextView"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/pathColorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:padding="3dip"
                android:text="Path Color:"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="101dp" />

            <TextView
                android:id="@+id/pathColorValueTextView"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|end"
                android:padding="3dip"
                android:text="TextView" />

        </TableRow>


