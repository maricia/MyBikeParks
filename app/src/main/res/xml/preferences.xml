<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:divider="@android:color/holo_purple"
    android:icon="@color/brightgreen"
    android:defaultValue="true" >

        <PreferenceCategory
            android:key="Power_Menu"
            android:title="Power Setting">


            <SwitchPreference
                android:background="@android:color/background_light"
                android:defaultValue="true"
                android:key="Power_preference"
                android:title="Battery Saver" />


        </PreferenceCategory>


        <PreferenceCategory
            android:key="Tracker"
            android:title="Path Settings">

            <ListPreference
                android:defaultValue="Color.BLUE"
                android:entries="@array/values_color_list"
                android:entryValues="@array/values_color_list"
                android:key="myLineColor"
                android:summary="change the color of your path"
                android:title="Path Color" />

            <ListPreference
                android:defaultValue="5"
                android:dialogTitle="Path line weight"
                android:entries="@array/entries_weight_list_preference"
                android:entryValues="@array/entries_weight_list_preference"
                android:key="myLineWeight"
                android:summary="change the line weight of your path"
                android:title="Path weight" />
        </PreferenceCategory>


    <PreferenceCategory
        android:key="MarkerColors"
        android:title="Marker Colors">

        <ListPreference
            android:defaultValue="BitmapDescriptorFactory.HUE_GREEN"
            android:dialogTitle="Park Marker Color"
            android:entries="@array/marker_color_list_preference"
            android:entryValues="@array/values_marker_color_list_preference"
            android:key="myParkMarkerColor"
            android:summary="change the color of the park marker"
            android:title="Park Marker Color" />

        <ListPreference
            android:defaultValue="BitmapDescriptorFactory.HUE_RED"
            android:dialogTitle="Your Location Marker Color"
            android:entries="@array/marker_color_list_preference"
            android:entryValues="@array/values_marker_color_list_preference"
            android:key="myMarkerColor"
            android:summary="change the color of your location marker"
            android:title="Location Marker" />
    </PreferenceCategory>



    </PreferenceScreen>
